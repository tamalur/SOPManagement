
@{
    ViewBag.Title = "Publish SOP";
    TempData["PageTitle"] = "Publish SOP";
}
<div class="sopmessagebox">
    <div style="font-size:36px;font-weight:bold">

        @if (ViewBag.Title != null)
        {
            @ViewBag.Title
        }
        else
        {
            @TempData["PageTitle"]
        }

    </div>

    Please wait, DO NOT click on menu’s while publishing.

</div>

<div id="loading">
    <img id="loading-image" src="~/Content/Images/soploading.gif" alt="Loading..." />
</div>

<script>

    window.onload = function () {
        //alert("window load complete");
        window.location.href = '@Url.Action("ProcessPublish", "Home")'
    }

</script>